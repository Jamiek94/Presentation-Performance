@model Business.WebsiteViewModel

@{
    ViewData["Title"] = "Add website";
}

<form asp-controller="Website" asp-action="Add" method="post" class="form-horizontal">
    <h4>Add website</h4>
    <hr/>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Url" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Url" class="form-control"/>
            <span asp-validation-for="Url" class="text-danger"></span>
        </div>
    </div>
    
    <button type="submit" class="btn btn-default">Add website</button>
</form>